    <ControlTheme x:Key="{x:Type mxdcv:ColumnHeadersControl}" TargetType="mxdcv:ColumnHeadersControl">
        <Setter Property="BorderBrush" Value="{DynamicResource Outline/Neutral/Transparent/Medium}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                    <mxdcv:ColumnHeaderPanel x:Name="PART_HeadersPanel" />
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:ColumnHeaderControl}" TargetType="mxdcv:ColumnHeaderControl">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="6" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="BorderBrush" Value="{DynamicResource Outline/Neutral/Transparent/Medium}" />
        <Setter Property="Foreground" Value="{DynamicResource	Text/Neutral/Secondary}" />
        <Setter Property="FontSize" Value="{StaticResource ColumnHeaderFontSize}" />
        <Setter Property="ToolTip.Tip" Value="{Binding HeaderToolTip}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid Background="Transparent">
                    <Border x:Name="HeaderBorder" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                        <mxdcv:ColumnHeaderDockPanel x:Name="PART_HeaderPanel">
                            <Grid ColumnDefinitions="Auto,Auto,*,Auto" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="{TemplateBinding Padding}">
                                <CheckBox x:Name="PART_CheckBox" Focusable="False" Grid.Column="1" IsVisible="{TemplateBinding IsCheckBoxVisible}" IsChecked="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}"	/>
                                <ContentPresenter Grid.Column="2" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" TextElement.FontWeight="SemiBold" VerticalAlignment="Center">
                                    <ContentPresenter.Styles>
                                        <Style Selector="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="mxc:TextBlockHelper.ShowTooltipWhenTrimming" Value="True"/>
                                        </Style>
                                    </ContentPresenter.Styles>
                                </ContentPresenter>
                                <Path x:Name="SortIndicator" VerticalAlignment="Center" />
                            </Grid>
                            <ContentControl x:Name="PART_ColumnFilterPopupPlaceholder" VerticalAlignment="Center" IsVisible="{Binding $parent[mxdcv:ColumnHeaderControl].IsFilterVisible}"/>
                        </mxdcv:ColumnHeaderDockPanel>
                    </Border>
                    <Thumb Name="PART_ColumnResizeGrip" HorizontalAlignment="Right" />
                </Grid>
            </ControlTemplate>
        </Setter>
       
        <Style Selector="^/template/ Path">
            <Setter Property="Margin" Value="6,0,0,0" />
            <Setter Property="Fill" Value="{DynamicResource Icons/Outline/Disabled}" />
            <Setter Property="Height" Value="10" />
            <Setter Property="Width" Value="9" />
            <Setter Property="Grid.Column" Value="3" />
            <Setter Property="Stretch" Value="None" />
        </Style>

        <Style Selector="^/template/ Thumb">
            <Setter Property="Cursor" Value="SizeWestEast" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="5" />
            <Setter Property="BorderThickness" Value="0,0,2,0"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding	BorderBrush}" BorderThickness="{TemplateBinding	BorderThickness}" />
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="^Thumb:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource Outline/Accent/Secondary}" />
        </Style>

        <Style Selector="^/template/ Path#SortIndicator">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <Style Selector="^:sortascending /template/ Path#SortIndicator">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Data" Value="{StaticResource SortIndicatorAscendingPath}" />
        </Style>

        <Style Selector="^:sortdescending /template/ Path#SortIndicator">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Data" Value="{StaticResource SortIndicatorDescendingPath}" />
        </Style>

        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource Fill/Neutral/Secondary/Enabled}" />
            <Setter Property="Foreground" Value="{DynamicResource Text/Neutral/Primary}" />
        </Style>

        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{DynamicResource Fill/Neutral/Secondary/Hover}" />
        </Style>

        <Style Selector="^:dragging">
            <Setter Property="Background" Value="{DynamicResource Fill/Neutral/Secondary/Hover}" />
            <Setter Property="Opacity" Value="0.85" />
        </Style>

        <Style Selector="^:pointerover /template/ Path#SortIndicator">
            <Setter Property="Fill" Value="{DynamicResource Icons/Outline/Gray}" />
        </Style>

        <Style Selector="^[IsVerticalLineVisible=true] /template/ Border#HeaderBorder">
            <Setter Property="BorderThickness" Value="0,0,1,0" />
        </Style>

        <Style Selector="^[HasBandSeparator=true] /template/ Border#HeaderBorder">
            <Setter Property="BorderThickness" Value="0,0,3,0" />
        </Style>

        <Style Selector="^[HorizontalContentAlignment=Right] /template/ Path#SortIndicator">
            <Setter Property="Grid.Column" Value="0" />
            <Setter Property="Margin" Value="0,0,6,0" />
        </Style>

        <Style Selector="^[(mxdcv|ColumnHeaderControl.ColumnHeaderPlacement)=GroupPanel] /template/ Border#HeaderBorder">
            <Setter Property="Margin" Value="6,0,0,0" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:BandHeadersControl}" TargetType="mxdcv:BandHeadersControl">
        <Setter Property="BorderBrush" Value="{DynamicResource Outline/Neutral/Transparent/Medium}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                    <mxdcv:BandHeadersPanel x:Name="PART_BandHeadersPanel" Margin="0,-1,0,0"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:BandHeaderControl}" TargetType="mxdcv:BandHeaderControl">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="6" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="BorderBrush" Value="{DynamicResource Outline/Neutral/Transparent/Medium}" />
        <Setter Property="BorderThickness" Value="0,1,0,0" />
        <Setter Property="Foreground" Value="{DynamicResource Text/Neutral/Secondary}" />
        <Setter Property="FontSize" Value="{StaticResource ColumnHeaderFontSize}" />
        <Setter Property="ToolTip.Tip" Value="{Binding HeaderToolTip}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid Background="Transparent">
                    <Border x:Name="HeaderBorder" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}">
                        <Grid>
                            <ContentPresenter Content="{Binding DataContext.ActualCaption, RelativeSource={RelativeSource TemplatedParent}}"
                                              ContentTemplate="{Binding DataContext.HeaderTemplate, RelativeSource={RelativeSource TemplatedParent}}"
                                              HorizontalAlignment="{Binding DataContext.HeaderHorizontalAlignment, RelativeSource={RelativeSource TemplatedParent}}"
                                              VerticalAlignment="{Binding DataContext.HeaderVerticalAlignment, RelativeSource={RelativeSource TemplatedParent}}"
                                              Margin="{TemplateBinding Padding}" TextElement.FontWeight="SemiBold" Grid.Column="2" >
                                <ContentPresenter.Styles>
                                    <Style Selector="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="mxc:TextBlockHelper.ShowTooltipWhenTrimming" Value="True"/>
                                    </Style>
                                </ContentPresenter.Styles>
                            </ContentPresenter>
                            <Thumb Name="PART_ColumnResizeGrip" HorizontalAlignment="Right" />
                        </Grid>
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>

        <Style Selector="^[IsVerticalLineVisible=true]">
            <Setter Property="BorderThickness" Value="0,1,1,0" />
        </Style>

        <Style Selector="^[HasBandSeparator=true]">
            <Setter Property="BorderThickness" Value="0,1,3,0" />
        </Style>

        <Style Selector="^/template/ Thumb">
            <Setter Property="Cursor" Value="SizeWestEast" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="5" />
            <Setter Property="BorderThickness" Value="0,0,2,0"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" />
                </ControlTemplate>
            </Setter>
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:DataRowControlBase}" TargetType="mxdcv:DataRowControlBase">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource Outline/Neutral/Transparent/Medium}" />
        <Setter Property="Foreground" Value="{DynamicResource Text/Neutral/Primary}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="RowBorder" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,0,0,1">
                    <mxdcv:CellsPanel x:Name="PART_CellsPanel"/>
                </Border>
            </ControlTemplate>
        </Setter>

        <Style Selector="^:focusedAndSelectedState /template/ Border#RowBorder">
            <Setter Property="Background" Value="{DynamicResource Fill/Accent/Highlighting/Row/Hover}" />
        </Style>

        <Style Selector="^:focusedState /template/ Border#RowBorder">
            <Setter Property="Background" Value="{DynamicResource Fill/Neutral/Secondary/Enabled}" />
        </Style>

        <Style Selector="^:selectedState /template/ Border#RowBorder">
            <Setter Property="Background" Value="{DynamicResource Fill/Accent/Highlighting/Row/Enabled}" />
        </Style>

        <Style Selector="^[IsHorizontalLineVisible=false] /template/ Border#RowBorder">
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:CellControl}" TargetType="mxdcv:CellControl">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource Outline/Neutral/Transparent/Medium}" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <ControlTemplate>
                <mxdcv:CellEditor x:Name="PART_CellEditor" Background="Transparent" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,0,1,0"/>
            </ControlTemplate>
        </Setter>

        <Style Selector="^[IsVerticalLineVisible=false] /template/ mxdcv|CellEditor#PART_CellEditor">
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>

        <Style Selector="^[HasBandSeparator=true] /template/ mxdcv|CellEditor#PART_CellEditor">
            <Setter Property="BorderThickness" Value="0,0,3,0" />
        </Style>

        <Style Selector="^[IsCellFocused=true] /template/ mxdcv|CellEditor#PART_CellEditor">
            <Setter Property="Background" Value="{DynamicResource Fill/Neutral/Secondary/Enabled}" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:SearchPanel}" TargetType="mxdcv:SearchPanel">
        <Setter Property="Padding" Value="6" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource Outline/Neutral/Transparent/Medium}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="HorizontalContentAlignment" Value="Right" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                    <Grid ColumnDefinitions="*, Auto" Margin="{TemplateBinding Padding}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}">
                        <mxdcv:MinWidthDecorator ChildMinWidth="{StaticResource SearchPanelEditorMinWidth}">
                            <ed:ButtonEditor x:Name="PART_SearchEditor"
															 EditorValue="{Binding SearchText, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
															 EditorValuePostDelay="{TemplateBinding SearchDelay}"
															 EditorValuePostMode="Delayed"
															 Watermark="{x:Static localization:ControlsResources.DataControl_SearchPanel_PromptText}"
															 NullValueButtonPosition="EditorBox">
                                <ed:ButtonEditor.Buttons>
                                    <ed:ButtonSettings IsEnabled="False" IsLeft="True" Glyph="{x:Static other:_12.Search}" GlyphSize="14,14" />
                                </ed:ButtonEditor.Buttons>
                            </ed:ButtonEditor>
                        </mxdcv:MinWidthDecorator>
                        <Button x:Name="PART_CloseButton" Grid.Column="1" Margin="6,0,0,0" Padding="6" BorderThickness="0" IsTabStop="False" IsVisible="{TemplateBinding ShowCloseButton}" Command="{Binding CloseClickCommand, RelativeSource={RelativeSource TemplatedParent}}">
                            <Button.Content>
                                <Image Source="{x:Static other:_12.Close}"  Width="14" Height="14"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:AutoFilterRowControl}" TargetType="mxdcv:AutoFilterRowControl">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource Outline/Neutral/Transparent/Medium}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Margin="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                    <mxdcv:CellsPanel x:Name="PART_CellsPanel"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:ColumnChooserControl}" TargetType="mxdcv:ColumnChooserControl">
        <Setter Property="Focusable" Value="True" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid Margin="{TemplateBinding Padding}" RowDefinitions="Auto, *" >
                    <ed:ButtonEditor x:Name="PART_SearchEditor"
														 Margin="8,6"
														 EditorValue="{Binding SearchText, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
														 EditorValuePostMode="Delayed"
														 EditorValuePostDelay="500"
														 Watermark="{x:Static localization:ControlsResources.DataControl_ColumnChooser_SearchPromptText}"
														 NullValueButtonPosition="EditorBox">
                    </ed:ButtonEditor>
                    <ScrollViewer Grid.Row="1" x:Name="PART_ScrollViewer" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="PART_ColumnItemsControl" Background="Transparent">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="Auto, *" Margin="8,0">
                                        <CheckBox x:Name="PART_VisibilityCheckBox" IsChecked="{Binding Column.IsVisible}" IsEnabled="{Binding IsEnabled}" />
                                        <mxdcv:ColumnHeaderControl Grid.Column="1" Column="{Binding Column}" MinHeight="30" Margin="8,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel x:Name="PART_Panel" Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                    <Border x:Name="PART_HeaderDropIndicator" IsHitTestVisible="False" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="{Binding DataControl.HeaderDropIndicatorWidth, RelativeSource={RelativeSource TemplatedParent}}" Background="{DynamicResource Outline/Accent/Secondary}" IsVisible="False"/>
                </Grid>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:DropIndicatorControl}" TargetType="mxdcv:DropIndicatorControl">
        <Setter Property="BorderBrush" Value="{DynamicResource Outline/Accent/Secondary}" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                                MinHeight="4"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Margin="{TemplateBinding Padding}" />
            </ControlTemplate>
        </Setter>

        <Style Selector="^[DropPosition=Before]">
            <Setter Property="VerticalContentAlignment" Value="Top" />
            <Setter Property="BorderThickness" Value="0,2,0,0" />
        </Style>

        <Style Selector="^[DropPosition=After]">
            <Setter Property="VerticalContentAlignment" Value="Bottom" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
        </Style>

        <Style Selector="^[DropPosition=Inside]">
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

    </ControlTheme>

    <!-- Filtering -->
    <ControlTheme x:Key="ColumnHeaderFilterControl" TargetType="mxe:PopupEditor" BasedOn="{StaticResource {x:Type mxe:PopupEditor}}">
        <Setter Property="PopupMinWidth" Value="50" />
        <Setter Property="PopupMinHeight" Value="50" />
        <Setter Property="MinHeight" Value="27" />
        <Style Selector="^:activeMode">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <ToggleButton x:Name="PART_PopupOpenButton" Focusable="False"/>
                        <common:ResizeablePopup Name="PART_EditorPopup"
                                                       WindowManagerAddShadowHint="False"
                                                       IsOpen="{TemplateBinding IsPopupOpen, Mode=TwoWay}"
                                                       MinHeight="{TemplateBinding PopupMinHeight}"
                                                       MaxHeight="{TemplateBinding PopupMaxHeight}"
                                                       PlacementTarget="PART_PopupOpenButton"
                                                       Placement="BottomEdgeAlignedLeft"
                                                       IsLightDismissEnabled="{Binding !StaysPopupOpen, RelativeSource={RelativeSource TemplatedParent}}">
                            <Border x:Name="PopupBorder"
                                      BorderThickness="{StaticResource EditorBorderThickness}"
                                      BorderBrush="{DynamicResource PopupBorderBrush}"
                                      Background="{DynamicResource PopupEditorPopupBackground}"
                                      HorizontalAlignment="Stretch"
                                      CornerRadius="{StaticResource PopupCornerRadius}"
                                      BoxShadow="{DynamicResource PopupBoxShadow}"
                                      Margin="{DynamicResource PopupBoxShadowMargin}"
                                      TextElement.FontFamily="{TemplateBinding FontFamily}">
                                <mxev:PopupContentContainer Name="PART_PopupContentContainer"/>
                            </Border>
                        </common:ResizeablePopup>
                    </Grid>
                </ControlTemplate>
            </Setter>

            <Style Selector="^/template/ ToggleButton#PART_PopupOpenButton">
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground">
                    <Setter.Value>
                        <MultiBinding Converter="{mxdgv:IsFilteredToForegroundConverter}">
                            <Binding Path="$parent[mxdcv:ColumnHeaderControl].Column.IsFiltered" />
                            <DynamicResourceExtension ResourceKey="Icons/Outline/Disabled" />
                            <DynamicResourceExtension ResourceKey="Icons/Outline/Gray" />
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Border Background="{TemplateBinding Background}" Padding="6" CornerRadius="4">
                            <Path Fill="{TemplateBinding Foreground}" Data="{StaticResource DataControlFilterIcon}" Stretch="None"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter>

                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="{DynamicResource Fill/Neutral/Secondary/Hover}"/>
                </Style>

                <Style Selector="^:checked">
                    <Setter Property="Background" Value="{DynamicResource Fill/Neutral/Secondary/Hover}"/>
                </Style>
            </Style>
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:ColumnHeaderFilterComboBoxEditor}" TargetType="mxdcv:ColumnHeaderFilterComboBoxEditor" BasedOn="{StaticResource ColumnHeaderFilterControl}">
        <Style Selector="^:activeMode">
            <Setter Property="PopupContent">
                <Setter.Value>
                    <Template>
                        <mxev:ComboBoxPopupControl x:Name="PART_ComboBoxPopupControl"
                                                   ReadOnly="{Binding $parent[mxe:ComboBoxEditor].ReadOnly}"
                                                   SelectionMode="{Binding $parent[mxe:ComboBoxEditor].SelectionMode}"
                                                   ClearValueItemText="{Binding $parent[mxe:ComboBoxEditor].ClearValueItemText}"
                                                   ShowPredefinedSelectItem="{Binding $parent[mxe:ComboBoxEditor].ShowPredefinedSelectItem}"/>
                    </Template>
                </Setter.Value>
            </Setter>
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:FilterPanel}" TargetType="mxdcv:FilterPanel">
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="BorderThickness" Value="0,1,0,0" />
        <Setter Property="BorderBrush" Value="{DynamicResource Outline/Neutral/Transparent/Medium}" />
        <Setter Property="Padding" Value="6,2" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                    <Grid ColumnDefinitions="Auto, Auto, *">
                        <Button BorderThickness="0" Padding="4" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center" Command="{Binding CloseClickCommand, RelativeSource={RelativeSource TemplatedParent}}">
                            <Button.Content>
                                <Image Source="{x:Static other:_12.Close}" Width="12" Height="12" />
                            </Button.Content>
                        </Button>
                        <CheckBox Margin="6,0" MinHeight="24" Grid.Column="1" IsChecked="{Binding IsFilterEnabled, RelativeSource={RelativeSource TemplatedParent}}"/>
                        <TextBlock Grid.Column="2" TextTrimming="CharacterEllipsis" mxc:TextBlockHelper.ShowTooltipWhenTrimming="True" Text="{TemplateBinding FilterString}" VerticalAlignment="Center" />
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:FocusedRowAdornerControl}" TargetType="mxdcv:FocusedRowAdornerControl">
        <Setter Property="ClipToBounds" Value="False"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderBrush="{DynamicResource Outline/Accent/Focus}" BorderThickness="1" IsHitTestVisible="False" Margin="0,-1,0,0"/>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type mxdcv:FocusedCellAdornerControl}" TargetType="mxdcv:FocusedCellAdornerControl">
        <Setter Property="ClipToBounds" Value="False"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderBrush="{DynamicResource Outline/Accent/Focus}" BorderThickness="1" IsHitTestVisible="False">
                    <Border.Margin>
                        <Binding Path="$parent[mxdc:DataControlBase].ShowHorizontalLines">
                            <Binding.Converter>
                                <mx:BoolToObjectConverter>
                                    <mx:BoolToObjectConverter.TrueValue>
                                        <Thickness>-1,-1,0,-1</Thickness>
